.react-toggle {
    touch-action: pan-x;
    display: inline-block;
    cursor: pointer;
    position: relative;
    background-color: transparent;
    border: 0;
    padding: 0;
    user-select: none;
    margin-left: auto;

    .toggle-icons {
        position: relative;
        width: 50px;
        height: 24px;
        padding: 0;
        border-radius: 30px;
        background-color: hsl(222, 14%, 7%);
        transition: all 0.2s ease;

        .toggle-l, .toggle-r {
            width: 17px;
            height: 17px;
            position: absolute;
            top: 0;
            bottom: 0;
            margin-top: auto;
            margin-bottom: auto;
            line-height: 0;
            display: flex;
            align-items: center;
        }

        .toggle-l {
            left: 5px;
        }

        .toggle-r {
            right: 5px;
        }
    }

    .switch {
        position: absolute;
        top: 1px;
        left: 1px;
        width: 22px;
        height: 22px;
        border-radius: 50%;
        background-color: #fafafa;
        box-sizing: border-box;
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1) 0ms;
        transform: translateX(0);

        &.dark {
            transform: translateX(24px);
        }

        &.light {
            transform: translateX(0);
        }
    }
}

body.dark .toggle-icons {
    border: 1px solid rgba(255, 255, 255, 0.3);
}